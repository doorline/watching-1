<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.watching.mapper.Admin">
	
	<!-- 로그인 관련 mapper-->
    <select id = "login_check" parameterType= "com.watching.dto.AdminDTO" resultType="String">
        select aId from ADMIN where aId=#{aId} and aPw=#{aPw} and aName=#{aName}
    </select>    
 
    <!-- 회원 강제탈퇴관련 mapper -->
    <delete id="admin_member_forced_evictionCheck">
    	delete from MEMBER where mId=#{mId}
    </delete>
    
</mapper>